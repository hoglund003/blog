<div class="flex flex-col gap-5">
  <h1 class="text-primary text-3xl">
    New post
  </h1>

  <%= form_with model: @post do |f| %>

    <div class="flex flex-col gap-3 text-accent-content">
      <div class="flex flex-col">
        <%= f.label :title, class: "text-base-content" %>
        <%= f.text_field :title, autocomplete: "off" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :content, class: "text-base-content" %>
        <%= f.text_area :content, autocomplete: "off" %>
      </div>
    </div>

    <%= f.button "Post", class: "btn btn-primary", type: "submit" %>

  <% end %>
</div>